{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "instanceName": {
            "type": "string"
        },
        "databasePassword": {
            "type": "securestring"
        },
        "createDatabase": {
            "type": "string",
            "defaultValue": "Yes",
            "allowedValues": [
                "Yes",
                "No"
            ]
        },
        "databaseTier": {
            "type": "string",
            "defaultValue": "Standard"
        },
        "databaseSku": {
            "type": "string",
            "defaultValue": "S1"
        },
        "databaseMaxSizeBytes": {
            "type": "string",
            "defaultValue": "1073741824"
        },
        "webappTier": {
            "type": "string",
            "defaultValue": "PremiumV2"
        },
        "webappSku": {
            "type": "string",
            "defaultValue": "P3v2"
        },
        "webappInstanceCount": {
            "type": "int",
            "defaultValue": 1
        },
        "databaseUsername": {
            "type": "string",
            "defaultValue": "dbAdmin"
        },
        "templateRepoBase": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/UiPath/DevOps"
        },
        "templateRepoBranch": {
            "type": "string",
            "defaultValue": "master"
        },
        "webappTemplateUri": {
            "type": "string",
            "defaultValue": "ARM/webapp/azuredeploy.json"
        },
        "databaseTemplateUri": {
            "type": "string",
            "defaultValue": "ARM/sql-server-database/azuredeploy.json"
        }
    },
    "variables": {
        "templateUriBase": "[concat(parameters('templateRepoBase'), '/', parameters('templateRepoBranch'), '/')]",
        "databaseConnectionString": "[concat('Server=tcp:', parameters('instanceName'), '.database.windows.net,1433;', 'Database=', parameters('instanceName'), ';User ID=', parameters('databaseUsername'), '@', parameters('instanceName'), ';Password=', parameters('databasePassword'), ';Trusted_Connection=False;Encrypt=True;Connection Timeout=30;')]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('web', uniqueString(deployment().name))]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateUriBase'), parameters('webappTemplateUri'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "webAppName": {
                        "value": "[parameters('instanceName')]"
                    },
                    "connectionString": {
                        "value": "[variables('databaseConnectionString')]"
                    },
                    "tier": {
                        "value": "[parameters('webappTier')]"
                    },
                    "sku": {
                        "value": "[parameters('webappSku')]"
                    },
                    "instanceCount": {
                        "value": "[parameters('webappInstanceCount')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('db', uniqueString(deployment().name))]",
            "type": "Microsoft.Resources/deployments",
            "condition": "[equals(parameters('createDatabase'), 'Yes')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateUriBase'), parameters('databaseTemplateUri'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "serverName": {
                        "value": "[parameters('instanceName')]"
                    },
                    "administratorLogin": {
                        "value": "[parameters('databaseUsername')]"
                    },
                    "administratorLoginPassword": {
                        "value": "[parameters('databasePassword')]"
                    },
                    "databaseName": {
                        "value": "[parameters('instanceName')]"
                    },
                    "databaseEdition": {
                        "value": "[parameters('databaseTier')]"
                    },
                    "databaseServiceObjective": {
                        "value": "[parameters('databaseSku')]"
                    },
                    "databaseMaxSizeBytes": {
                        "value": "[parameters('databaseMaxSizeBytes')]"
                    },
                    "databaseCreateMode": {
                        "value": "Default"
                    },
                    "sourceDatabaseId": {
                        "value": ""
                    },
                    "location": {
                        "value": "[resourceGroup().location]"
                    }
                }
            }
        }
    ]
}
