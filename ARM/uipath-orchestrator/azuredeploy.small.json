{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "instanceName": {
            "type": "string",
            "metadata": {
                "description": "The name of your Orchestrator website. Must be unique, since it will be available at https://{instanceName}.azurewebsites.net"
            }
        },
        "databasePassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the account with which Orchestrator will connect to the Azure SQL database. Please make sure it's at least 8 characters long and meets at least three of the following conditions: contains lowercase characters, contains uppercase characters, contains numbers, contains symbols"
            }
        },
        "templateRepoBase": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/UiPath/DevOps"
        },
        "templateRepoBranch": {
            "type": "string",
            "defaultValue": "master"
        },
        "orchestratorTemplateUri": {
            "type": "string",
            "defaultValue": "ARM/uipath-orchestrator/azuredeploy.json"
        }
    },
    "variables": {
        "templateUriBase": "[concat(parameters('templateRepoBase'), '/', parameters('templateRepoBranch'), '/')]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('sm', uniqueString(deployment().name))]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateUriBase'), parameters('orchestratorTemplateUri'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "instanceName": {
                        "value": "[parameters('instanceName')]"
                    },
                    "databasePassword": {
                        "value": "[parameters('databasePassword')]"
                    },
                    "templateRepoBase": {
                        "value": "[parameters('templateRepoBase')]"
                    },
                    "templateRepoBranch": {
                        "value": "[parameters('templateRepoBranch')]"
                    },
                    "webAppTier": {
                        "value": "Standard"
                    },
                    "webAppSku": {
                        "value": "S2"
                    },
                    "webappInstanceCount": {
                        "value": 1
                    },
                    "databaseTier": {
                        "value": "Premium"
                    },
                    "databaseSku": {
                        "value": "P1"
                    },
                    "databaseMaxSizeBytes": {
                        "value": "107374182400"
                    }
                }
            }
        }
    ]
}
